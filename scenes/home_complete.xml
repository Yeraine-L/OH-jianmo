<mujoco model="home_complete">
  <!-- ====================================================================
       完整家居场景 - 多房间设计
       包含：玄关、客厅、厨房、卧室
       特性：物理可交互的门、丰富的家具、美观的材质
       ====================================================================== -->

  <!-- 编译器选项 -->
  <compiler angle="degree" coordinate="local" inertiafromgeom="true" meshdir="../assets/meshes"/>

  <!-- 仿真选项 -->
  <option timestep="0.003" iterations="100" gravity="0 0 -9.81">
    <flag warmstart="enable"/>
  </option>

  <!-- 默认物理参数 -->
  <default>
    <geom solref="0.01 1" solimp="0.95 0.95 0.001"/>
    <joint damping="2" armature="0.01"/>
  </default>

  <!-- ====================================================================
       资源定义：纹理和材质
       ====================================================================== -->
  <asset>
    <!-- 地板纹理 -->
    <texture name="wood_floor_texture" type="2d" builtin="checker"
             rgb1="0.72 0.52 0.32" rgb2="0.62 0.42 0.22"
             width="512" height="512" mark="edge" markrgb="0.45 0.30 0.15"/>

    <texture name="tile_floor_texture" type="2d" builtin="checker"
             rgb1="0.95 0.95 0.95" rgb2="0.88 0.88 0.88"
             width="512" height="512" mark="none"/>

    <texture name="carpet_texture" type="2d" builtin="checker"
             rgb1="0.75 0.35 0.35" rgb2="0.65 0.25 0.25"
             width="256" height="256" mark="none"/>

    <!-- 墙壁纹理 -->
    <texture name="wall_texture" type="2d" builtin="flat"
             rgb1="0.96 0.94 0.88" width="512" height="512"/>

    <texture name="wallpaper_texture" type="2d" builtin="gradient"
             rgb1="0.92 0.90 0.85" rgb2="0.88 0.86 0.80"
             width="512" height="512"/>

    <!-- 家具纹理 -->
    <texture name="wood_dark_texture" type="2d" builtin="gradient"
             rgb1="0.45 0.30 0.18" rgb2="0.35 0.22 0.12"
             width="512" height="512" mark="cross" markrgb="0.30 0.18 0.08"/>

    <texture name="wood_light_texture" type="2d" builtin="gradient"
             rgb1="0.75 0.60 0.45" rgb2="0.65 0.50 0.35"
             width="512" height="512" mark="cross" markrgb="0.55 0.40 0.25"/>

    <texture name="fabric_texture" type="2d" builtin="flat"
             rgb1="0.35 0.45 0.55" width="512" height="512"/>

    <texture name="metal_texture" type="2d" builtin="flat"
             rgb1="0.75 0.75 0.80" width="256" height="256"/>

    <texture name="ceramic_texture" type="2d" builtin="gradient"
             rgb1="0.9 0.9 0.95" rgb2="0.8 0.8 0.88" width="256" height="256"/>

    <!-- 材质定义 -->
    <material name="wood_floor_mat" texture="wood_floor_texture"
              specular="0.1" shininess="0.1" reflectance="0.02"/>

    <material name="tile_floor_mat" texture="tile_floor_texture"
              specular="0.1" shininess="0.1" reflectance="0.02"/>

    <material name="carpet_mat" texture="carpet_texture"
              specular="0.05" shininess="0.01" reflectance="0"/>

    <material name="wall_mat" texture="wall_texture"
              specular="0.1" shininess="0.05" reflectance="0.0"/>
    <material name="wall_ext_mat" rgba="0.9 0.9 0.9 1.0" specular="0.1" shininess="0.05" reflectance="0.0"/>

    <material name="wallpaper_mat" texture="wallpaper_texture"
              specular="0.1" shininess="0.05" reflectance="0.01"/>

    <material name="wood_dark_mat" texture="wood_dark_texture"
              specular="0.5" shininess="0.35" reflectance="0.08"/>

    <material name="wood_light_mat" texture="wood_light_texture"
              specular="0.5" shininess="0.35" reflectance="0.08"/>

    <material name="fabric_mat" texture="fabric_texture"
              specular="0.1" shininess="0.02" reflectance="0.01"/>

    <material name="metal_mat" texture="metal_texture"
              specular="0.9" shininess="0.7" reflectance="0.3"/>

    <material name="ceramic_mat" texture="ceramic_texture"
              specular="0.8" shininess="0.6" reflectance="0.15"/>

    <!-- 茶壶网格 -->
    <mesh name="teapot_mesh" file="teapot_simple.obj" scale="1.0 1.0 1.0"/>
    <!-- 机器人材质 -->
    <material name="ur5_metal" rgba="0.6 0.7 0.8 1" specular="0.5" shininess="0.3"/>
    <material name="ur5_joint" rgba="0.2 0.2 0.2 1" specular="0.5" shininess="0.3"/>
  </asset>

  <!-- ====================================================================
       视觉效果设置
       ====================================================================== -->
  <visual>
    <global offwidth="1920" offheight="1080" elevation="-25" azimuth="135" fovy="50"/>
    <quality shadowsize="4096" offsamples="8"/>
    <map force="0.1" zfar="50" znear="0.08"/>
    <headlight ambient="0.4 0.4 0.4" diffuse="0.8 0.8 0.8" specular="0.4 0.4 0.4"/>
  </visual>

  <!-- ====================================================================
       世界定义
       ====================================================================== -->
  <worldbody>
    <!-- 光照系统 -->
    <!-- 主光源（天花板中央） -->
    <light name="ceiling_main" pos="0 -1 2.8" dir="0 0 -1"
           directional="false" diffuse="0.9 0.9 0.85" specular="0.6 0.6 0.6"
           castshadow="false"/>

    <!-- 客厅补光 -->
    <light name="living_room_light" pos="-1 -3 2.5" dir="0 0 -1"
           directional="false" diffuse="0.7 0.7 0.7" specular="0.4 0.4 0.4"
           castshadow="false"/>

    <!-- 厨房补光 -->
    <light name="kitchen_light" pos="2.5 -3.5 2.5" dir="0 0 -1"
           directional="false" diffuse="0.8 0.8 0.8" specular="0.5 0.5 0.5"
           castshadow="false"/>

    <!-- 卧室补光 -->
    <light name="bedroom_light" pos="-2 0.5 2.3" dir="0 0 -1"
           directional="false" diffuse="0.6 0.6 0.55" specular="0.3 0.3 0.3"
           castshadow="false"/>

    <!-- 浴室主光源 -->
    <light name="bathroom_light" pos="-5.2 0.5 2.3" dir="0 0 -1"
           directional="false" diffuse="0.95 0.95 1.0" specular="0.7 0.7 0.7"
           castshadow="false"/>

    <!-- ====================================================================
         地板系统（不同房间不同材质）
         ====================================================================== -->

    <!-- 主地板基础层 -->
    <geom name="floor_base" type="plane" size="6 4.5 0.1"
          rgba="0.5 0.5 0.5 1" condim="3" friction="1.0 0.5 0.01"
          solref="0.02 1" solimp="0.9 0.95 0.001"/>

    <!-- 客厅地板（木地板） -->
    <geom name="floor_living_room" type="box" pos="-2.5 -2 0.005" size="3 2 0.005"
          material="wood_floor_mat" friction="1.0 0.5 0.01" contype="0" conaffinity="0"/>

    <!-- 厨房地板（瓷砖） -->
    <geom name="floor_kitchen" type="box" pos="3.0 -2 0.005" size="2.5 2 0.005"
          material="tile_floor_mat" friction="0.8 0.4 0.01" contype="0" conaffinity="0"/>

    <!-- 卧室地板（木地板） -->
    <geom name="floor_bedroom_mid" type="box" pos="0 2.75 0.005" size="2 1.5 0.005"
          material="wood_floor_mat" friction="1.0 0.5 0.01" contype="0" conaffinity="0"/>
    <geom name="floor_bedroom_left" type="box" pos="-4 2.75 0.005" size="2 1.5 0.005" material="wood_floor_mat" contype="0" conaffinity="0"/>
    <geom name="floor_bedroom_right" type="box" pos="4 2.75 0.005" size="2 1.5 0.005" material="wood_floor_mat" contype="0" conaffinity="0"/>

    <!-- 浴室地板（防滑瓷砖） -->
    <geom name="floor_bathroom" type="box" pos="4.75 -3.25 0.005" size="1.25 1.25 0.005"
          material="tile_floor_mat" friction="1.2 0.6 0.02" contype="0" conaffinity="0"/>

    <!-- 玄关地板（瓷砖） -->
    <geom name="floor_entrance" type="box" pos="0 0.5 0.005" size="2 1 0.005"
          material="tile_floor_mat" friction="0.8 0.4 0.01" contype="0" conaffinity="0"/>

    <!-- 客厅地毯 -->
    <geom name="carpet_living_room" type="box" pos="-2.5 -2 0.012" size="1.6 0.8 0.008"
          material="carpet_mat" friction="1.8 0.9 0.02" contype="0" conaffinity="0"
          solref="0.005 0.5" solimp="0.95 0.98 0.001"/>

    <!-- ====================================================================
         墙壁系统
         ====================================================================== -->

    <!-- 外墙 -->
    <geom name="wall_north" type="box" pos="0 4.5 1.25" size="6 0.05 1.25" material="wall_ext_mat"/>

    <geom name="wall_south" type="box" pos="0 -4.5 1.25" size="6 0.05 1.25" material="wall_ext_mat"/>

    <!-- Modified: 右侧外墙拆分为上下段，为入户门预留门洞 -->
    <geom name="wall_east" type="box" pos="6 0 1.25" size="0.05 4.5 1.25" material="wall_ext_mat"/>

    <geom name="wall_west" type="box" pos="-6 0 1.25" size="0.05 4.5 1.25" material="wall_ext_mat"/>

    <geom name="wall_h_mid_left" type="box" pos="-5.225 1 1.25" size="0.775 0.05 1.25" material="wall_mat"/>
    <geom name="wall_h_mid_right" type="box" pos="5.225 1 1.25" size="0.775 0.05 1.25" material="wall_mat"/>

    <geom name="wall_v_left_top" type="box" pos="-2 2.75 1.25" size="0.05 1.75 1.25" material="wall_mat"/>
    <geom name="wall_v_right_top" type="box" pos="2 2.75 1.25" size="0.05 1.75 1.25" material="wall_mat"/>
    <geom name="wall_v_kitchen_bottom" type="box" pos="1 -2.975 1.25" size="0.05 1.525 1.25" material="wall_mat"/>
    <geom name="wall_v_kitchen_top" type="box" pos="1 0.225 1.25" size="0.05 0.775 1.25" material="wall_mat"/>
    <geom name="bath_wall_e" type="box" pos="6 -3.25 1.25" size="0.05 1.25 1.25" material="wall_mat"/>
    <geom name="bath_wall_n" type="box" pos="4.75 -2 1.25" size="1.25 0.05 1.25" material="wall_mat"/>
    <geom name="bath_wall_s" type="box" pos="4.75 -4.5 1.25" size="1.25 0.05 1.25" material="wall_mat"/>
    <geom name="bath_wall_w_bottom" type="box" pos="3.5 -4.1 1.25" size="0.05 0.4 1.25" material="wall_mat"/>
    <geom name="bath_wall_w_top" type="box" pos="3.5 -2.4 1.25" size="0.05 0.4 1.25" material="wall_mat"/>


    <!-- ====================================================================
         门系统（带铰链物理）
         ====================================================================== -->

    <body name="main_door" pos="-4 -4.5 0">
      <geom name="main_door_frame_left" type="box" pos="-0.45 0 1.0" size="0.05 0.05 1.0" material="wall_ext_mat"/>
      <geom name="main_door_frame_right" type="box" pos="0.45 0 1.0" size="0.05 0.05 1.0" material="wall_ext_mat"/>
      <geom name="main_door_frame_top" type="box" pos="0 0 2.0" size="0.45 0.05 0.05" material="wall_ext_mat"/>
      <body name="main_door_panel" pos="-0.45 0 1.0">
        <joint name="main_door_hinge" type="hinge" pos="0 0 0" axis="0 0 1" range="-5 90" damping="5" armature="0.1"/>
        <geom name="main_door_board" type="box" pos="0.45 0 0" size="0.45 0.04 0.95" rgba="0.8 0.8 0.82 1"/>
        <geom name="main_door_handle" type="cylinder" pos="0.75 0.06 0" size="0.02 0.08" rgba="0.7 0.6 0.3 1"/>
      </body>
    </body>


    <!-- 门3：厨房门 -->
    <body name="kitchen_door" pos="1 -1 0">
      <geom name="kitchen_door_frame_left" type="box" pos="0.05 -0.4 1.0" size="0.05 0.05 1.0"
            material="wood_light_mat"/>
      <geom name="kitchen_door_frame_right" type="box" pos="0.05 0.4 1.0" size="0.05 0.05 1.0"
            material="wood_light_mat"/>
      <geom name="kitchen_door_frame_top" type="box" pos="0.05 0 2.0" size="0.05 0.4 0.05"
            material="wood_light_mat"/>

      <!-- 门板 -->
      <body name="kitchen_door_panel" pos="0.05 -0.4 1.0">
        <joint name="kitchen_door_hinge" type="hinge" pos="0 0 0" axis="0 0 1"
               range="-5 90" damping="5" armature="0.1"/>
        <geom name="kitchen_door_board" type="box" pos="0.04 0.35 0" size="0.04 0.35 0.95"
              material="wood_light_mat" mass="10" friction="1.0 0.5 0.01"/>
        <geom name="kitchen_door_handle" type="cylinder" pos="0.1 0.6 0" size="0.02 0.08"
              rgba="0.7 0.6 0.3 1" mass="0.2" euler="0 90 0"/>
      </body>
    </body>

    <!-- 门4：浴室门 -->
    <body name="bathroom_door" pos="3.5 -3.25 0">
      <geom name="bathroom_door_frame_left" type="box" pos="-0.45 0 1.0" size="0.05 0.05 1.0" material="wood_light_mat"/>
      <geom name="bathroom_door_frame_right" type="box" pos="0.45 0 1.0" size="0.05 0.05 1.0" material="wood_light_mat"/>
      <geom name="bathroom_door_frame_top" type="box" pos="0 0 2.0" size="0.45 0.05 0.05" material="wood_light_mat"/>
      <body name="bathroom_door_panel" pos="-0.45 0 1.0">
        <joint name="bathroom_door_hinge" type="hinge" pos="0 0 0" axis="0 0 1" range="-5 90" damping="5" armature="0.1"/>
        <geom name="bathroom_door_board" type="box" pos="0.45 0 0" size="0.45 0.04 0.95" rgba="0.95 0.95 0.98 0.7" mass="10" friction="1.0 0.5 0.01"/>
        <geom name="bathroom_door_handle" type="cylinder" pos="0.75 0.06 0" size="0.02 0.08" rgba="0.85 0.85 0.88 1" mass="0.2" euler="0 90 0"/>
      </body>
    </body>


    <body name="entrance_door" pos="4 1 0">
      <geom name="entrance_door_frame_left" type="box" pos="-0.45 0 1.0" size="0.05 0.05 1.0" material="wood_light_mat"/>
      <geom name="entrance_door_frame_right" type="box" pos="0.45 0 1.0" size="0.05 0.05 1.0" material="wood_light_mat"/>
      <geom name="entrance_door_frame_top" type="box" pos="0 0 2.0" size="0.45 0.05 0.05" material="wood_light_mat"/>
      <body name="entrance_door_panel" pos="-0.45 0 1.0">
        <joint name="entrance_door_hinge" type="hinge" pos="0 0 0" axis="0 0 1" range="-5 90" damping="5" armature="0.1"/>
        <geom name="entrance_door_board" type="box" pos="0.45 0 0" size="0.45 0.04 0.95" material="wood_light_mat" mass="10" friction="1.0 0.5 0.01"/>
        <geom name="entrance_door_handle" type="cylinder" pos="0.75 0.06 0" size="0.02 0.08" rgba="0.7 0.6 0.3 1" mass="0.2" euler="0 90 0"/>
      </body>
    </body>

    <!-- ====================================================================
         玄关家具
         ====================================================================== -->

    <!-- 鞋柜 -->
    <body name="shoe_cabinet" pos="-5.3 -3.6 0.35">
      <geom name="shoe_cabinet_body" type="box" size="0.3 0.4 0.4" rgba="0.5 0.4 0.3 1"/>
    </body>

    <!-- 衣架 -->
    <body name="coat_rack" pos="-5.3 -4.1 0">
      <geom name="coat_rack_base" type="cylinder" size="0.15 0.02"
            rgba="0.3 0.25 0.2 1" mass="3"/>
      <geom name="coat_rack_pole" type="cylinder" pos="0 0 1.0" size="0.025 1.0"
            rgba="0.3 0.25 0.2 1" mass="2"/>
      <geom name="coat_rack_hook1" type="box" pos="0.1 0 1.8" size="0.1 0.02 0.02"
            rgba="0.3 0.25 0.2 1" mass="0.1"/>
      <geom name="coat_rack_hook2" type="box" pos="-0.1 0 1.6" size="0.1 0.02 0.02"
            rgba="0.3 0.25 0.2 1" mass="0.1"/>
    </body>

    <!-- ====================================================================
         客厅家具
         ====================================================================== -->

    <!-- 茶几 -->
    <body name="coffee_table" pos="-2.5 -2 0.35">
      <geom name="table_top" type="box" size="0.6 0.4 0.025"
            material="wood_light_mat" mass="12" friction="0.8 0.4 0.01"/>
      <geom name="leg_1" type="cylinder" pos="0.5 0.3 -0.2" size="0.03 0.175"
            rgba="0.35 0.25 0.15 1" mass="1.2" friction="1.0 0.5 0.01"/>
      <geom name="leg_2" type="cylinder" pos="0.5 -0.3 -0.2" size="0.03 0.175"
            rgba="0.35 0.25 0.15 1" mass="1.2" friction="1.0 0.5 0.01"/>
      <geom name="leg_3" type="cylinder" pos="-0.5 0.3 -0.2" size="0.03 0.175"
            rgba="0.35 0.25 0.15 1" mass="1.2" friction="1.0 0.5 0.01"/>
      <geom name="leg_4" type="cylinder" pos="-0.5 -0.3 -0.2" size="0.03 0.175"
            rgba="0.35 0.25 0.15 1" mass="1.2" friction="1.0 0.5 0.01"/>
      <!-- 可移动物品已移至 worldbody 顶层 -->
    </body>

    <!-- 沙发 -->
    <body name="sofa" pos="-2.5 -2.7 0.25">
      <geom name="sofa_base" type="box" size="1.2 0.45 0.08" rgba="0.25 0.25 0.30 1" mass="20" friction="1.2 0.6 0.01"/>
      <geom name="sofa_seat" type="box" pos="0 0 0.16" size="1.15 0.42 0.08" material="fabric_mat" mass="8" friction="1.5 0.8 0.02"/>
      <geom name="sofa_backrest" type="box" pos="0 -0.38 0.45" size="1.15 0.1 0.37" material="fabric_mat" mass="12"/>
      <geom name="sofa_armrest_left" type="box" pos="-1.1 0 0.30" size="0.1 0.45 0.22" material="fabric_mat" mass="4"/>
      <geom name="sofa_armrest_right" type="box" pos="1.1 0 0.30" size="0.1 0.45 0.22" material="fabric_mat" mass="4"/>

      <!-- 靠垫 -->
    </body>
 
    <!-- 电视柜 -->
    <body name="tv_stand" pos="-2.5 -1.2 0.3">
      <geom name="tv_stand_body" type="box" size="0.8 0.25 0.3"
            material="wood_dark_mat" mass="30"/>
      <geom name="tv_stand_top" type="box" pos="0 0 0.32" size="0.82 0.27 0.02"
            material="wood_dark_mat" mass="8"/>

      <!-- 可开关的左柜门 -->
      <body name="tv_stand_door_left" pos="-0.4 -0.27 0">
        <joint name="tv_door_left_hinge" type="hinge" pos="-0.38 0 0" axis="0 0 1"
               range="-90 5" damping="3" armature="0.05"/>
        <geom name="tv_door_left_panel" type="box" pos="0 0 0" size="0.38 0.02 0.28"
