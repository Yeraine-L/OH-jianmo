    <!-- 厨房操作台 + 水槽 -->
    <body name="kitchen_counter" pos="2.6 -0.8 0.45">
      <!-- 台面 -->
      <geom name="counter_top" type="box" size="1.3 0.3 0.03"
            material="tile_floor_mat" mass="40"/>
      <!-- 柜体 -->
      <geom name="counter_cabinet" type="box" pos="0 0 -0.42" size="1.28 0.28 0.42"
