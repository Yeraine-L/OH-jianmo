        <geom name="tv_door_right_knob" type="sphere" pos="-0.3 -0.04 0" size="0.015"
              rgba="0.7 0.6 0.3 1" mass="0.05"/>
      </body>

      <!-- 电视 -->
      <geom name="tv_screen" type="box" pos="0 0 0.6" size="0.55 0.05 0.35"
            rgba="0.1 0.1 0.1 1" mass="10"/>
      <geom name="tv_stand_pole" type="cylinder" pos="0 0 0.45" size="0.05 0.1"
            rgba="0.2 0.2 0.2 1" mass="2"/>

      <!-- 可移动物品：遥控器 -->
    </body>
    <!-- 清理装饰：移除盆栽 -->

    <!-- 书架 -->
    <!-- 清理装饰：移除书架与装饰书本 -->

    <!-- ====================================================================
         厨房家具
         ====================================================================== -->

    <!-- 冰箱 -->
    <body name="refrigerator" pos="5.0 -1.5 0.85">
      <geom name="fridge_body" type="box" size="0.35 0.35 0.85"
            material="metal_mat" mass="80"/>
      <geom name="fridge_door" type="box" pos="-0.36 0 0.3" size="0.02 0.33 0.5"
            rgba="0.85 0.85 0.9 1" mass="8"/>
      <geom name="fridge_handle" type="box" pos="-0.4 -0.28 0.3" size="0.015 0.06 0.15"
