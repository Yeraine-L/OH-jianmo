<mujoco model="ur5_simplified">
  <!-- UR5 机械臂简化模型 -->
  <!-- 适用于快速原型开发和算法测试 -->

  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>

  <asset>
    <!-- 机械臂材质 -->
    <material name="ur5_metal" rgba="0.6 0.7 0.8 1"
              specular="0.5" shininess="0.3"/>
    <material name="ur5_joint" rgba="0.2 0.3 0.4 1"
              specular="0.4" shininess="0.25"/>
  </asset>

  <worldbody>
    <body name="ur5_base_link" pos="0 0 0">
      <!-- 基座 -->
      <geom name="base" type="cylinder" size="0.06 0.05"
            material="ur5_metal" mass="4"/>

      <!-- 肩关节 -->
      <body name="shoulder_link" pos="0 0 0.089">
        <joint name="shoulder_pan_joint" type="hinge" axis="0 0 1"
               range="-180 180" damping="0.5" armature="0.1"/>
        <geom name="shoulder" type="cylinder" size="0.05 0.04"
              material="ur5_joint" mass="3.7"/>

        <!-- 上臂 -->
        <body name="upper_arm_link" pos="0 0.13585 0" euler="0 90 0">
          <joint name="shoulder_lift_joint" type="hinge" axis="0 0 1"
                 range="-180 180" damping="0.5" armature="0.1"/>
          <geom name="upper_arm" type="capsule" size="0.045"
                fromto="0 0 0 0.425 0 0" material="ur5_metal" mass="8.4"/>

          <!-- 肘关节 -->
          <body name="forearm_link" pos="0.425 0 0">
            <joint name="elbow_joint" type="hinge" axis="0 0 1"
                   range="-180 180" damping="0.5" armature="0.1"/>
            <geom name="forearm" type="capsule" size="0.04"
                  fromto="0 0 0 0.39225 0 0" material="ur5_metal" mass="2.3"/>

            <!-- 手腕1 -->
            <body name="wrist_1_link" pos="0.39225 0 0.10915" euler="0 90 0">
              <joint name="wrist_1_joint" type="hinge" axis="0 0 1"
                     range="-180 180" damping="0.1" armature="0.01"/>
              <geom name="wrist_1" type="cylinder" size="0.035 0.03"
                    material="ur5_joint" mass="1.2"/>

              <!-- 手腕2 -->
              <body name="wrist_2_link" pos="0 0.09465 0">
                <joint name="wrist_2_joint" type="hinge" axis="0 0 1"
                       range="-180 180" damping="0.1" armature="0.01"/>
                <geom name="wrist_2" type="cylinder" size="0.035 0.03"
                      material="ur5_joint" mass="1.2"/>

                <!-- 手腕3 / 末端法兰 -->
                <body name="wrist_3_link" pos="0 0 0.09465" euler="0 90 0">
                  <joint name="wrist_3_joint" type="hinge" axis="0 0 1"
                         range="-180 180" damping="0.1" armature="0.01"/>
                  <geom name="wrist_3" type="cylinder" size="0.03 0.02"
                        material="ur5_joint" mass="0.8"/>

                  <!-- 末端执行器接口 -->
                  <site name="ee_site" pos="0 0 0.02" size="0.01"
                        rgba="1 0 0 0.5"/>

                  <!-- 简单夹爪（可选） -->
                  <body name="gripper_base" pos="0 0 0.03">
                    <geom name="gripper_palm" type="box" size="0.03 0.03 0.01"
                          rgba="0.3 0.3 0.3 1" mass="0.2"/>

                    <!-- 左指 -->
                    <body name="left_finger" pos="0 0.02 0.02">
                      <joint name="left_finger_joint" type="slide" axis="0 1 0"
                             range="0 0.04" damping="0.5"/>
                      <geom name="left_finger_geom" type="box" size="0.008 0.01 0.03"
                            rgba="0.2 0.2 0.2 1" mass="0.05"/>
                    </body>

                    <!-- 右指 -->
                    <body name="right_finger" pos="0 -0.02 0.02">
                      <joint name="right_finger_joint" type="slide" axis="0 -1 0"
                             range="0 0.04" damping="0.5"/>
                      <geom name="right_finger_geom" type="box" size="0.008 0.01 0.03"
                            rgba="0.2 0.2 0.2 1" mass="0.05"/>
                    </body>
                  </body>
                </body>
              </body>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <!-- 执行器配置 -->
  <actuator>
    <!-- 关节电机 (position control) -->
    <position name="shoulder_pan" joint="shoulder_pan_joint"
              kp="2000" kv="100" ctrlrange="-3.14159 3.14159"/>
    <position name="shoulder_lift" joint="shoulder_lift_joint"
              kp="2000" kv="100" ctrlrange="-3.14159 3.14159"/>
    <position name="elbow" joint="elbow_joint"
              kp="1500" kv="100" ctrlrange="-3.14159 3.14159"/>
    <position name="wrist_1" joint="wrist_1_joint"
              kp="500" kv="50" ctrlrange="-3.14159 3.14159"/>
    <position name="wrist_2" joint="wrist_2_joint"
              kp="500" kv="50" ctrlrange="-3.14159 3.14159"/>
    <position name="wrist_3" joint="wrist_3_joint"
              kp="500" kv="50" ctrlrange="-3.14159 3.14159"/>

    <!-- 夹爪电机 -->
    <motor name="gripper" joint="left_finger_joint" gear="50"
           ctrllimited="true" ctrlrange="0 0.04"/>
    <motor name="gripper_mirror" joint="right_finger_joint" gear="50"
           ctrllimited="true" ctrlrange="0 0.04"/>
  </actuator>

  <!-- 传感器 -->
  <sensor>
    <!-- 关节位置传感器 -->
    <jointpos name="shoulder_pan_pos" joint="shoulder_pan_joint"/>
    <jointpos name="shoulder_lift_pos" joint="shoulder_lift_joint"/>
    <jointpos name="elbow_pos" joint="elbow_joint"/>
    <jointpos name="wrist_1_pos" joint="wrist_1_joint"/>
    <jointpos name="wrist_2_pos" joint="wrist_2_joint"/>
    <jointpos name="wrist_3_pos" joint="wrist_3_joint"/>

    <!-- 关节速度传感器 -->
    <jointvel name="shoulder_pan_vel" joint="shoulder_pan_joint"/>
    <jointvel name="shoulder_lift_vel" joint="shoulder_lift_joint"/>
    <jointvel name="elbow_vel" joint="elbow_joint"/>

    <!-- 末端执行器位置 -->
    <framepos name="ee_pos" objtype="site" objname="ee_site"/>
    <framequat name="ee_quat" objtype="site" objname="ee_site"/>

    <!-- 触觉传感器（夹爪） -->
    <touch name="left_finger_touch" site="ee_site"/>
  </sensor>
</mujoco>
